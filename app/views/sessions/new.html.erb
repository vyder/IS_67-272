<% title "Log in" %>

<p>Don't have an account? <%= link_to "Sign up!", signup_path %></p>
	<br />
<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :login, "Username / Email ID" %> <%= text_field_tag :login, params[:login] %>
  </p>
	<br /> 	<br />
  <p>
    <%= label_tag :password %> <%= password_field_tag :password %>
  </p>
	<br />
  <p><%= submit_tag "Log in" %></p>
	<br />
<p>Did you forget your password again?! No worries, <a href="#">click here</a></p>
<% end %>
